{
  "extends": ["./tsconfig.json"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo",

    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "tsdown.config.ts",
    "vitest.config.ts",
    "src/**/__tests__/*"
  ]
}
